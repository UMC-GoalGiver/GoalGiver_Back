{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "off",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error"],
    "no-undef": ["error"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error", "always"]
  }
}